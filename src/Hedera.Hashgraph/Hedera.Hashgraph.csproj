<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LangVersion>14</LangVersion>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BouncyCastle.Cryptography" Version="2.6.2" />
    <PackageReference Include="Google.Protobuf" Version="3.33.4" />
    <PackageReference Include="Grpc" Version="2.46.6" />
    <PackageReference Include="Grpc.Tools" Version="2.76.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="Protos/**/*.proto" ProtoRoot="Protos" GrpcServices="Both" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="SDK - Copy\Queries\" />
    <Folder Include="SDK - Copy\Transactions\Account\" />
    <Folder Include="SDK - Copy\Transactions\Contract\" />
    <Folder Include="SDK - Copy\Transactions\Ethereum\" />
    <Folder Include="SDK - Copy\Transactions\File\" />
    <Folder Include="SDK - Copy\Transactions\LiveHash\" />
    <Folder Include="SDK - Copy\Transactions\Node\" />
    <Folder Include="SDK - Copy\Transactions\System\" />
    <Folder Include="SDK - Copy\Transactions\Token\" />
    <Folder Include="SDK - Copy\Transactions\Topic\" />
    <Folder Include="SDK\Topics\" />
    <Folder Include="SDK\Accounts\" />
  </ItemGroup>

</Project>
